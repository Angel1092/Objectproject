public class Pet {
    // Attributes
    private String name;
    private String type;
    private int energy;

    //  The Constructor
    public Pet(String name, String type) {
        this.name = name;
        this.type = type;
        this.energy = 100; // default energy level
    }

    // Behavior (method) (Changes the attributes)
    public void play(String activity) {
        System.out.println(name + " the " + type + " is playing: " + activity);
        
        if (energy >= 10) {
            energy -= 10;
        } else {
            System.out.println(name + " is too tired to play.");
        }
    }

    // Method to display pet's current status
    public void displayStatus() {
        System.out.println("Name: " + name + ", Type: " + type + ", Energy: " + energy);
    }
}
