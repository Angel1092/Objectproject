public class Pet {
    // Attributes
    String name;
    String type;
    int energy;

    // Constructor to initialize attributes
    public Pet(String name, String type) {
        this.name = name;
        this.type = type;
        this.energy = 100;  // default energy level
    }

    // Behavior that changes the attributes
    public void play() {
        if (energy >= 10) {
            energy -= 10;  // playing reduces energy by 10
            System.out.println(name + " the " + type + " played and now has " + energy + " energy.");
        } else {
            System.out.println(name + " the " + type + " is too tired to play.");
        }
    }

    // Method to display current attributes
    public void showStatus() {
        System.out.println("Name: " + name + ", Type: " + type + ", Energy: " + energy);
    }

    // Main method to create and use objects
    public static void main(String[] args) {
        // Create three Pet objects
        Pet pet1 = new Pet("Rex", "Dog");
        Pet pet2 = new Pet("Mittens", "Cat");
        Pet pet3 = new Pet("Nemo", "Fish");

        // Show initial status
        pet1.showStatus();
        pet2.showStatus();
        pet3.showStatus();

        // Use the behavior to change attributes
        pet1.play();
        pet2.play();
        pet3.play();

        // Show status after playing
        pet1.showStatus();
        pet2.showStatus();
        pet3.showStatus();
    }
}

